@using StoreManagement.Models
@{
    ViewData["Title"] = "CreateEmployee";
    Layout = "~/Views/Shared/_MP_Back.cshtml";

    var POSITION = (EMPLOYEE_POSITION[])ViewData["POSITION"];
}
<div class="card-body">
    <div>
        <div id="divForm">
            <div class="container">
                <form>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="txtUsername">Username</label>
                            <input type="text" class="form-control" id="txtUsername" placeholder="Username" value="">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="txtPassword">Password</label>
                            <input type="password" class="form-control" id="txtPassword" placeholder="Password">
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="txtFirstname">Firstname</label>
                            <input type="text" class="form-control" id="txtFirstname" placeholder="Firstname">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="txtPassword">Lastname</label>
                            <input type="text" class="form-control" id="txtLastname" placeholder="Lastname">
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="txtIDCard">ID Card</label>
                            <input type="text" class="form-control" id="txtIDCard" placeholder="">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputState">Position</label>
                            <select id="ddlPosition" class="form-control">
                                <option selected>Choose...</option>
                                @{
                                    if (POSITION != null && POSITION.Any())
                                    {
                                        foreach (var item in POSITION)
                                        {
                                            <option value="@item.POSITION_CODE">@item.POSITION_DESCRIPTION</option>
                                        }
                                    }
                                }
                            </select>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
</div>
<div class="card-footer bg-light">
    <div class="col-sm-12 text-center">
