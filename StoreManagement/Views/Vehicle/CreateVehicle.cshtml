@model StoreManagement.Models.TBM_VEHICLE
@{
    ViewData["Title"] = "CreateVehicle";
    Layout = "~/Views/Shared/_MP_Back.cshtml";

    var CUSTOMER = (TBM_CUSTOMER[])ViewData["CUSTOMER"];
    var SERVICES = (TBM_SERVICES[])ViewData["SERVICES"];
    var BRAND = (TBM_BRAND[])ViewData["BRAND"];

    var EDIT_FLG = (string)ViewData["EDIT_FLG"];
}

<div class="card-body">
    <div>
        <div id="divForm">
            <div class="container">
                <form>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="txtUsername">License No</label>
                            <input type="text" class="form-control" id="txtLicense_No" name="txtLicense_No" placeholder="License No" maxlength="20" value="@Model.LICENSE_NO">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="ddlBrand">Brand</label>
                            <select id="ddlBrand" name="ddlBrand" class="form-control">
                                <option value="" selected>Choose...</option>
                                @{
                                    if (BRAND != null && BRAND.Any())
                                    {
                                        foreach (var item in BRAND)
                                        {
                                            if (item.BRAND_CODE == Model.BRAND_NO)
                                            {
                                                <option value="@item.BRAND_CODE" selected>@item.BRAND_NAME_THA</option>
                                            }
                                            else
                                            {
                                                <option value="@item.BRAND_CODE">@item.BRAND_NAME_THA</option>
                                            }
                                        }
                                    }
                                }
                            </select>
                        </div>
                        @*<div class="form-group col-md-6">
                            <label for="txtBrand_no">Brand No</label>
                            <input type="text" class="form-control" id="txtBrand_No" name="txtBrand_No" placeholder="Brand No" maxlength="3" value="@Model.BRAND_NO">
                        </div>*@
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="txtModel_no">Model No</label>
                            <textarea rows="3" type="text" class="form-control" id="txtModel_No" name="txtModel_No" placeholder="Model No"></textarea>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="txtChassis_no">Chassis No</label>
                            <textarea rows="3" type="text" class="form-control" id="txtChassis_No" name="txtChassis_No" placeholder="Chassis No"></textarea>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="txtColor">Color</label>
                            <input type="text" class="form-control" id="txtColor" name="txtColor" placeholder="Color" maxlength="50" value="@Model.COLOR">
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label for="txtEffective_Date">Effective Date</label>
                            <div class="input-group mb-3">
                                <input ID="txtEffective_Date" name="txtEffective_Date" type="text" autocomplete="off" class="form-control" MaxLength="10"  placeholder="--/--/----" value="@(string.IsNullOrEmpty(Model.EFFECTIVE_DATE) ? "" : Model.EFFECTIVE_DATE.Substring(0, 10))" />
                                <div class="input-group-append">
                                    <span class="input-group-text"><i class="glyphicon glyphicon-calendar"></i></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="txtEffective_Date">Expire Date</label>
                            <div class="input-group mb-3">
                                <input ID="txtExpire_Date" name="txtExpire_Date" type="text" autocomplete="off"  class="form-control" MaxLength="10" placeholder="--/--/----" value="@(string.IsNullOrEmpty(Model.EXPIRE_DATE) ? "" : Model.EXPIRE_DATE.Substring(0, 10))" />
                                <div class="input-group-append">
                                    <span class="input-group-text"><i class="glyphicon glyphicon-calendar"></i></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="txtService_Price">Service Price</label>
                            <input type="text" class="form-control" id="txtService_Price" name="txtService_Price" placeholder="Service Price" value="@Model.SERVICE_PRICE">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="ddlService_No">Service No</label>
                            <select id="ddlService_No" name="ddlService_No" class="form-control">
                                <option value="" selected>Choose...</option>
                                @{
                                    if (SERVICES != null && SERVICES.Any())
                                    {
                                        foreach (var item in SERVICES)
                                        {
                                            if (item.SERVICES_NO == Model.SERVICE_NO)
                                            {
                                                <option value="@item.SERVICES_NO" selected>@item.SERVICES_NAME</option>
                                            }
                                            else
                                            {
                                                <option value="@item.SERVICES_NO">@item.SERVICES_NAME</option>
                                            }
                                        }
                                    }
                                }
                            </select>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="txtContract_No">Contract No</label>
                            <input type="text" class="form-control" id="txtContract_No" name="txtContract_No" placeholder="Contract No" value="@Model.CONTRACT_NO">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="ddlCustomer_ID">Customer Name</label>
                            <select id="ddlCustomer_ID" name="ddlCustomer_ID" class="form-control">
                                <option value="" selected>Choose...</option>
                                @{
                                    @*if (CUSTOMER != null && CUSTOMER.Any())
            {
                foreach (var item in CUSTOMER)
                {
                    if (item.CUSTOMER_ID == Model.CUSTOMER_ID)
                    {
                        <option value="@item.CUSTOMER_ID" selected>@item.DISTRICT_CODE</option>
                    }
                    else
                    {
                        <option value="@item.CUSTOMER_ID">@item.DISTRICT_CODE</option>
                    }
                }
            }*@
                                    if (CUSTOMER != null && CUSTOMER.Any())
                                    {
                                        foreach (var item in CUSTOMER)
                                        {
                                            if (item.CUSTOMER_ID == Model.CUSTOMER_ID)
                                            {
                            <option value="@item.CUSTOMER_ID" selected>@item.FNAME  @item.LNAME</option>
                                            }
                                            else
                                            {
                            <option value="@item.CUSTOMER_ID">@item.FNAME   @item.LNAME</option>
                                            }
                                        }
                                    }
                                }
                            </select>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
</div>
<div class="card-footer bg-light">
    <div class="col-sm-12 text-center">
        <button id="btnSubmit" type="button" class="btn btn-primary" title="Submit" data-toggle="tooltip"><i class="fa fa-save"></i>&nbsp;Submit</button>
        <button id="btnBack" type="button" class="btn btn-dark" title="Back" data-toggle="tooltip"><i class="fa fa-arrow-left"></i>&nbsp;Back</button>
    </div>
</div>

<script type="text/javascript">

    $(document).ready(function () {
        $('#ddlBrand').select2();
        $('#ddlBrand').select2();
        $('#ddlCustomer_ID').select2();
       // $('#txtEffective_Date').datepicker();
        InputMaskDecimal('#txtService_Price', 12, 0, false, false);
        //SetTxtNumber($('#txtService_Price'));
        SetDatePicker($('#txtEffective_Date'));
        SetDatePicker($('#txtExpire_Date'));

        $('#btnSubmit').on('click', function () {
            DialogConfirmSubmit(function () {
                swal.disableButtons();
                BlockUI();

                var obj = {
                    'LICENSE_NO': GetValTextBox('txtLicense_No'),//GetValTextBox('hddID'),
                    'BRAND_NO': GetValDropdown('ddlBrand'),
                    'MODEL_NO': GetValTextArea('txtModel_No'),
                    'CHASSIS_NO': GetValTextArea('txtChassis_No'),
                    'COLOR': GetValTextBox('txtColor'),
                    'EFFECTIVE_DATE': GetValTextBox('txtEffective_Date'),
                    'EXPIRE_DATE': GetValTextBox('txtExpire_Date'),
                    'SERVICE_PRICE': GetValTextBox('txtService_Price'),
                    'SERVICE_NO': GetValDropdown('ddlService_No'),
                    'CONTRACT_NO': GetValTextBox('txtContract_No'),
                    'CUSTOMER_ID': GetValDropdown('ddlCustomer_ID')
                }
                BlockUI();
                $.ajax({
                    url: '@Url.Action("SaveData", "Vehicle")',
                    type: 'POST',
                    //contentType: 'application/json; charset=utf-8',
                    dataType: 'json',
                    data: { 'data': obj},
                    success: function (response) {
                        UnblockUI();
                        if (response.Status == SysProcess.SessionExpired) {
                           PopupSessionTimeOut('@Url.Action("Index","Login")');
                        } else if (response.Status == SysProcess.Duplicate) {
                            DialogDuplicate();
                        } else if (response.Status == SysProcess.Failed) {
                            DialogWarning(response.Msg);
                        } else {
                            DialogSucessRedirect('@Url.Action("Index", "Vehicle")');
                        }
                    },
                    error: function () {
                    }
                });
            });
        });

        $('#btnBack').on('click', function () {
            window.Redirect('@(Url.Action("Index",@ViewContext.RouteData.Values["Controller"].ToString()))');
        });

        if ('@EDIT_FLG' == 'Y') {
            $('#txtModel_No').val('@Model.MODEL_NO');
            $('#txtChassis_No').val('@Model.CHASSIS_NO');
        }
    });

</script>

